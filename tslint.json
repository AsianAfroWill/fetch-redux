{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended"],
  "jsRules": {},
  "rules": {
    "interface-name": [true, "never-prefix"],
    "object-literal-sort-keys": false,
    "only-arrow-functions": true,
    "ordered-imports": [
      true,
      {
        "grouped-imports": true,
        "groups": ["^[^./][^/]*$", "^[^.]", "^\\."]
      }
    ],
    "semicolon": [true, "always"]
  },
  "rulesDirectory": []
}
